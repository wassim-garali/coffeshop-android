<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.my_coffe1">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.My_Coffe1"
        tools:targetApi="31">

        <!-- Activité de connexion -->
        <activity
            android:name=".ActivityLogin"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activité de création de compte -->
        <activity
            android:name=".ActivityRegister"
            android:exported="true"
            android:label="@string/app_name"/>

        <!-- Activité principale de l'application (Page principale après la connexion réussie) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- Ajout de l'activité CartActivity -->
        <activity
            android:name=".CartActivity"
            android:exported="true"
            android:label="Panier" />

    </application>

</manifest>
